# Server Configuration
PORT=4242
NODE_ENV=development

# URLs
FRONTEND_URL=http://localhost:8080
BACKEND_URL=http://localhost:4242

# Database (used by Prisma)
# For Docker Compose: DATABASE_URL is overridden in docker-compose.yml to use 'db' service
# For local development: postgresql://postgres:postgres@localhost:5432/hoodies
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hoodies

# Database credentials (used by docker-compose.yml to build DATABASE_URL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=hoodies

# Mercado Pago Configuration
MERCADOPAGO_ACCESS_TOKEN=APP_USR-XXXXXXXXXXXXXXXXXXXXXXXX
MERCADOPAGO_WEBHOOK_SECRET=
SHIPPING_DEFAULT_COST_COP=20000
WHATSAPP_CLOUD_API_TOKEN=
WHATSAPP_CLOUD_PHONE_NUMBER_ID=
WHATSAPP_CLOUD_TO_NUMBER=+573000000000
WHATSAPP_CLOUD_API_VERSION=v22.0
